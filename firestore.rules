rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Usuários podem ler e escrever apenas seus próprios dados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Leaderboard pode ser lido por todos, mas escrito apenas por usuários autenticados
    match /leaderboard/{document} {
      allow read: if true;  // Qualquer one pode ver o ranking
      allow write: if request.auth != null;  // Apenas usuários logados podem atualizar
    }
    
    // Jogos dos usuários - apenas o próprio usuário pode acessar
    match /users/{userId}/games/{gameId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Bloquear acesso a qualquer outro documento
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
